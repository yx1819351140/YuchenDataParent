{
  "jobName": "Events2Es",
  "flinkConfig": {
    "localMode": true,
    "localEnableWeb": true,
    "parallelism": 1,
    "runtimeMode": "streaming",
    "enableCheckpoint": false,
    "checkpointInterval": 10000,
    "checkpointMode": "at_least_once",
    "checkpointTimeout": 60000,
    "advancedConfig": {
      "rest.flamegraph.enabled": true
    }
  },
  "taskConfig": {
    "esConfig": {
      "elasticsearch.hosts": "192.168.12.197,192.168.12.198,192.168.12.199",
      "elasticsearch.port": "9200"
    },
    "kafkaConfig":{
      "bootstrap.servers": "datanode01:19092,datanode02:19092,datanode03:19092",
      "group.id": "flink-Events2Es",
      "starting.offsets": "earliest"
    },
    "yuchen_news": {
      "news.output.index.dynamic": "indexName",
      "news.output.index.alias": "yuchen_events",
      "news.output.index.prefix": "yuchen_events",
      "news.output.index.format": "yyyy",
      "news.output.index.type": "_doc",
      "news.output.target.fields": "news_id,raw_nlp_result,update_time,create_time",
      "news.input.topics": "globalevent_nlp_result_v0.5.1"
    }
  }
}